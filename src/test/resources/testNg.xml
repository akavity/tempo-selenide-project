<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="MainTest" parallel="tests" thread-count="2">

    <test name="Registration">
        <parameter name="startType" value="selenoid"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <classes>
            <class name="org.example.RegistrationTest">
                <methods>
                    <include name="makeMistakeDuringRegistration"/>
                    <include name="logInAsUnregisteredUser"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="PizzaShopping">
        <parameter name="startType" value="selenoid"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <classes>
            <class name="org.example.PizzaShoppingTest">
                <methods>
                    <include name="checkPriceOfGoodInBasketTopTest1"/>
                    <include name="checkPriceOfGoodInBasketTopTest2"/>
                    <include name="checkPriceOfGoodInBasketTopTest3"/>
                    <include name="checkPriceOfTwoGoodsInBasketTop"/>
                    <include name="checkPriceOfTreeGoodsInBasketTop"/>
                    <include name="checkPriceOfGoodInCart"/>
                    <include name="checkPriceOfTwoGoodsInCart"/>
                    <include name="checkPriceOfTreeGoodsInCart"/>
                    <include name="checkSortingByType"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
